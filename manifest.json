{
    "manifest_version": 2,
    "name": "TD Extension",
    "description": "This extensions enables TD features on any website",
    "version": "1.0",
    "browser_action": {
        "default_icon": "td-icon.png",
        //"default_popup": "td.html",
        "default_title": "Click here!"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "js/background.js"
            ]
    },
    "icons": {
        "16": "td-icon.png",
        "48": "td-icon.png",
        "128": "td-icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["js/jquery-3.1.1.min.js","js/content.js"]
        }
    ]
}